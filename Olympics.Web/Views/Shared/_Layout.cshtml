<!DOCTYPE html>
<html ng-app="app">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="container body-content">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    @Scripts.Render("~/Scripts/angular.js")
    @Scripts.Render("~/Scripts/angular-route.js")
    @Scripts.Render("~/Content/app/app.module.js")
    @Scripts.Render("~/Content/app/services/countries.service.js")
    @Scripts.Render("~/Content/app/controllers/countries.controller.js")
    @Scripts.Render("~/Content/app/controllers/addCountries.controller.js")
    @Scripts.Render("~/Content/app/app.routes.js")

    @RenderSection("scripts", required: false)
</body>
</html>
